<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">
    <RelativeLayout
        android:background="@color/home_red"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_padding45">
        <LinearLayout
            android:id="@+id/home_ll_logo"
            android:layout_centerInParent="true"
            android:layout_width="120dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                style="@style/home_wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/home_icon_logo"
                android:id="@+id/imageView"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_ll_account"
            android:layout_marginRight="@dimen/view_padding10"
            android:layout_marginTop="8dp"
            android:layout_width="65dp"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_height="30dp">
            <ImageButton
                android:layout_gravity="center_vertical"
                android:id="@+id/home_ibtn_account"
                style="@style/home_wrap_content"
                android:scaleType="centerInside"
                android:layout_height="15dp"
                android:layout_width="15dp"
                android:adjustViewBounds="true"
                android:src="@drawable/home_icon_mine"
                android:background="@null"
                />
            <TextView
                android:layout_marginLeft="3dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size18"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
       android:paddingLeft="@dimen/view_padding5"
        android:background="@color/home_red"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="@dimen/view_padding115">
        <LinearLayout
            android:gravity="center"
            style="@style/home_imagebutton_options"
            >
            <ImageButton
                android:layout_width="110dp"
                android:layout_height="110dp"
                style="@style/home_second_top"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/home_icon_hisbill"
                />
        </LinearLayout>
        <LinearLayout
            android:paddingRight="@dimen/view_padding5"
            android:gravity="center"
            style="@style/home_imagebutton_options"
            >
        <ImageButton
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            style="@style/home_second_top"
            android:src="@drawable/home_icon_analysis"
            />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/home_options_list"></include>
</LinearLayout>
